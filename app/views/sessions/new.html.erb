<% provide(:title, "Log in") %> <h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3 mb-4">
    <%= form_with(url: login_path, scope: :session, local: true) do |loginForm| %>

      <%= loginForm.label :email, class: 'form-label' %>
      <%= loginForm.email_field :email, class: 'form-control mb-3' %>

      <%= loginForm.label :password, class: 'form-label' %>
      <%= loginForm.password_field 'password', class: 'form-control mb-3' %>

      <%= loginForm.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <hr class="my-4">
    <p>New user? <%= link_to "Sign up now!", signup_path %></p> </div>
</div>